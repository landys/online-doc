	<target name="depJar">
		<jar destfile="${tomcat.dir}/${tomcat.webapp.lib.dir}/${depJar.name}"
			basedir="${bin.dir}" includes="**/*.class **/*.properties **/*.xml">
		</jar>
		<copy todir="${tomcat.dir}/${tomcat.webapp.lib.dir}">
			<fileset dir="${lib.dir}" includes="**/*.jar,**/*.zip"/>
		</copy>
	</target>
